<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F232C"
        tools:context=".ui.SplashFragment">

        <ImageView
            android:id="@+id/iv_splash"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_covid"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_splash_spin"
            app:layout_constraintEnd_toEndOf="@+id/iv_splash_spin"
            app:layout_constraintStart_toStartOf="@+id/iv_splash_spin"
            app:layout_constraintTop_toTopOf="@+id/iv_splash_spin"
            app:tint="@android:color/white" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/iv_splash_spin"
            style="@style/SpinKitView.MultiplePulse"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignTop="@id/iv_splash"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>